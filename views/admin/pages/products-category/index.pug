extends ../../layouts/default.pug
include ../../mixins/filter-status
include ../../mixins/search
include ../../mixins/pagination
include ../../mixins/form-change-multi
include ../../mixins/alert
include ../../mixins/sort

block main
    +alert-success(3000)
    h1 Danh mục sản phẩm

    .card.mb-3
        .card-header Danh sách
        .card-body
            .row
                .col-8 
                .col-4 
                    a(href=`${prefixAdmin}/products-category/create`
                    class="btn btn-outline-success") Thêm danh mục sản phẩm
            table(class="table caption-top"
    checkbox-multi)
                thead
                    tr
                        th 
                            input(type="checkbox"
                            name="checkAll")
                        th(scope="col") STT
                        th(scope="col") Hình ảnh
                        th(scope="col") Tiêu đề
                        th(scope="col") Vị trí
                        th(scope="col") Trạng thái
                        th(scope="col") Hàng động
                tbody
                    each item,index in records
                        tr  
                            td
                                input(type="checkbox" name="id" value=item.id)
                            td(scope="row") #{index + 1}
                            td 
                                img(src=item.thumbnail alt=item.title)
                            td #{item.title}
                            td 
                                input(type="number"
                                value=item.position
                                style="with: 60px;"
                                min="1"
                                name="position"
                                data-id=item.id)
                            td 
                                if (item.status == "active")
                                    a(href="javascript:;"
                                    data-status="active"
                                    data-id=item.id
                                    button-change-status
                                    class="badge text-bg-success") Hoạt động 
                                else
                                    a(href="javascript:;"
                                    data-status="inactive"
                                    data-id=item.id
                                    button-change-status
                                    class="badge text-bg-danger") Ngừng hoạt động
                            td 
                                a(class="btn btn-secondary btn-sm" href=`${prefixAdmin}/products-category/detail/${item.id}`) Chi tiết
                                a(class="btn btn-warning btn-sm" href=`${prefixAdmin}/products-category/edit/${item.id}`) Sửa
                                button(class="btn btn-danger btn-sm ml-1"
                                button-delete
                                data-id=item.id) xóa