extends ../../layouts/default.pug
include ../../mixins/filter-status
include ../../mixins/search
include ../../mixins/pagination
include ../../mixins/form-change-multi
include ../../mixins/alert
include ../../mixins/sort
include ../../mixins/moment

block main
    if (role.permissions.includes("products_view"))
        +alert-success(3000)
        h1 Dang sách sản phẩm

        .card.mb-3
            .card-header Bộ lọc và tìm kiếm
            .card-body
                .row
                    .col-6
                        +filter-status(filterStatus)
                    .col-6
                        +search(keyword)
            .card-body
                .row
                    .col-8
                        if (role.permissions.includes("products_edit"))
                            +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)
                    .col-4
                        if (role.permissions.includes("products_create"))
                            a(href=`${prefixAdmin}/products/create`
                            class="btn btn-primary") Thêm sản phẩm
        .card.mb-3
            .card-header Sắp xếp
            .card-body
                .row
                    .col-4 
                        +sort()
                        

        table(class="table caption-top"
        checkbox-multi)
            caption.table-caption Danh sách
            thead
                tr
                    th 
                        input(type="checkbox"
                        name="checkAll")
                    th(scope="col") STT
                    th(scope="col") Hình ảnh
                    th(scope="col") Tiêu đề 
                    th(scope="col") Giá
                    th(scope="col") Vị trí
                    th(scope="col") Trạng thái
                    th(scope="col") Người tạo
                    th(scope="col") Hàng động
            tbody
                each item,index in products
                    tr  
                        td
                            input(type="checkbox" name="id" value=item.id)
                        td(scope="row") #{index + 1}
                        td 
                            img(src=item.thumbnail alt=item.title style="width: 200px; height: 150px; object-fit: cover;")
                        td #{item.title}
                        td #{item.price}$
                        td 
                            input(type="number"
                            value=item.position
                            style="with: 60px;"
                            min="1"
                            name="position"
                            data-id=item.id)
                        td 
                            if (role.permissions.includes("products_edit"))
                                if (item.status == "active")
                                    a(href="javascript:;"
                                    data-status="active"
                                    data-id=item.id
                                    button-change-status
                                    class="badge text-bg-success text-decoration-none") Hoạt động 
                                else
                                    a(href="javascript:;"
                                    data-status="inactive"
                                    data-id=item.id
                                    button-change-status
                                    class="badge text-bg-danger text-decoration-none") Ngừng hoạt động
                            else 
                                if (item.status == "active")
                                    a(href="javascript:;"
                                    data-status="active"
                                    data-id=item.id
                                    class="badge text-bg-success text-decoration-none") Hoạt động 
                                else
                                    a(href="javascript:;"
                                    data-status="inactive"
                                    data-id=item.id
                                    class="badge text-bg-danger text-decoration-none") Ngừng hoạt động
                        td 
                            p #{item.accountFullName}
                            +formatDateTime(item.createdBy.createdAt)
                        td 
                            a(class="btn btn-secondary btn-sm text-decoration-none" href=`${prefixAdmin}/products/detail/${item.id}`) Chi tiết
                            if (role.permissions.includes("products_edit"))
                                a(class="btn btn-warning btn-sm text-decoration-none" href=`${prefixAdmin}/products/edit/${item.id}`) Sửa
                            if (role.permissions.includes("products_delete"))
                                button(class="btn btn-danger btn-sm ml-1"
                                button-delete
                                data-id=item.id) xóa

        +pagination(objectPagination)

        form(action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/products/change-status`) 

        form(action=""
            method="POST"
            id="form-delete-item"
            data-path=`${prefixAdmin}/products/delete`)

        script(src="/admin/js/products.js")