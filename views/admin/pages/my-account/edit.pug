extends ../../layouts/default.pug
include ../../mixins/alert
include ../../mixins/select-tree

block main
    +alert-error(3000)
    +alert-success(3000)
    h1(class="mb-4") Sửa sản phẩm
    form(action=`${prefixAdmin}/my-account/edit?_method=PATCH`
    method="POST"
    id="form-edit-product"
    enctype="multipart/form-data")
        div(class="form-group")
            label(for="fullName") Họ tên *
            input(type="text"
            name="fullName"
            id = "fullName"
            class="form-control"
            placeholder="Họ tên"
            value=user.fullName)
        div(class="form-group")
            label(for="email") Email *
            input(type="email"
            name="email"
            id = "email"
            class="form-control"
            placeholder="Email"
            value=user.email)
        div(class="form-group")
            label(for="password") Mật khẩu *
            input(type="password"
            name="password"
            id = "password"
            class="form-control"
            placeholder="Mật khẩu")
        div(class="form-group")
            label(for="phone") Số điện thoại
            input(type="text"
            name="phone"
            id="phone"
            class="form-control"
            placeholder="Số điện thoại"
            value=user.phone)
        div(class="form-group" upload-image)
            label(for="avatar") Avatar
            input(type="file"
            name="avatar"
            id="avatar"
            class="form-control-file"
            accept="image/*"
            upload-image-input)
            img(src=user.avatar upload-image-preview alt="Hình ảnh sản phẩm" class="image-preview" style="width: 200px; height: 150px; object-fit: cover;")
        div(class="form-group")
            button(type="submit"
            class="btn btn-primary") Sửa
    script(src="https://cdn.tiny.cloud/1/rb8401ud5yvnk1uai2vxr55oe39ajvh1fbxrfpczzxs3ypic/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous")
    script(src="/admin/js/products.js")
    script(src= "/admin/js/tinymce-config.js")