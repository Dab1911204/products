extends ../../layouts/default.pug
include ../../mixins/alert
include ../../mixins/select-tree

block main
    +alert-error(3000)
    h1(class="mb-4") Thông tin cá nhân
    if (user.avatar)
        img(src=user.avatar, alt="",width="150px", class="mb-3")
    else 
        img(src="/admin/images/avatar.png", alt="",width="150px", class="mb-3")
    if (user.fullName)
        p Họ tên: <b> #{user.fullName} </b>
    if (user.email)
        p Email: <b> #{user.email} </b>
    if (user.phone)
        p Số điện thoại: <b> #{user.phone} </b>
    p 
        sapn Trạng thái:
        sapn 
           <b> #{user.status == "active" ? "Hoạt động" : "Ngừng hoạt động"} </b>  
    if (role.title)
        p Phân quyền: <b> #{role.title} </b>
    a(href=`${prefixAdmin}/my-account/edit` class="btn btn-primary") Chỉnh sửa thông tin